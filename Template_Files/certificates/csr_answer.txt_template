[req]
default_bits = 4096
prompt = no
default_md = sha256
x509_extensions = req_ext
req_extensions = req_ext
distinguished_name = dn
[ dn ]
C=$PAIS
ST=$COMUNIDAD
L=$PROVINCIA
O=$EMPRESA
OU=$DEPARTAMENTO
emailAddress=$emailAddress
CN = $HostName
[ req_ext ]
subjectAltName = @alt_names
[alt_names]
DNS.1 = $HostName
DNS.2 = $ShortHostName