[req]
default_bits = 4096
prompt = no
default_md = sha256
x509_extensions = req_ext
req_extensions = req_ext
distinguished_name = dn
[ dn ]
C=__PAIS__
ST=__COMUNIDAD__
L=__PROVINCIA__
O=__EMPRESA__
OU=__DEPARTAMENTO__
emailAddress=__emailAddress__
CN = __HostName__
[ req_ext ]
subjectAltName = @alt_names
[alt_names]
DNS.1 = __HostName__
DNS.2 = __ShortHostName__